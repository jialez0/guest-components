[Unit]
Description=Confidential Data Hub daemon
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/confidential-data-hub-daemon -c /etc/trustiflux/confidential-data-hub.toml
Environment=RUST_LOG=info
Restart=always
RestartSec=5
Delegate=yes
KillMode=process
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity

[Install]
WantedBy=multi-user.target

